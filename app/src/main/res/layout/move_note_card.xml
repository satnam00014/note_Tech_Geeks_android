<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="10dp"
    app:flow_maxElementsWrap="@android:integer/config_mediumAnimTime"
    android:id="@+id/invites_cardview"
    android:backgroundTint="@android:color/holo_blue_bright"
    app:cardCornerRadius="10dp"
    android:alpha="0.8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/custom_ripple_card"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:padding="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/folder_image_move_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/folder_name_move_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="first name"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/note_numbers_move_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:text="first name"
                android:textSize="15sp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
